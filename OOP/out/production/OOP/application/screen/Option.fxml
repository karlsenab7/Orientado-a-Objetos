<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="768.0" maxWidth="1024.0" minHeight="768.0" minWidth="1024.0" prefHeight="768.0" prefWidth="1024.0" style="-fx-background-color: #71FFD6;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.screen.OptionController">
   <children>
      <HBox alignment="CENTER" prefHeight="553.0" prefWidth="1024.0">
         <children>
            <TextArea fx:id="optionContentTextArea" editable="false" opacity="0.5" prefHeight="520.0" prefWidth="1140.0">
               <HBox.margin>
                  <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
               </HBox.margin>
               <font>
                  <Font size="20.0" />
               </font>
            </TextArea>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="138.0" prefWidth="1024.0" spacing="75.0">
         <children>
            <Button fx:id="helpButton" mnemonicParsing="false" onAction="#helpButtonActionClick" prefHeight="50.0" prefWidth="100.0" text="Help">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Button fx:id="legendButton" mnemonicParsing="false" onAction="#legendButtonActionClick" prefHeight="50.0" prefWidth="100.0" text="Legend">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Button fx:id="creditsButton" mnemonicParsing="false" onAction="#creditsButtonActionClick" prefHeight="50.0" prefWidth="100.0" text="Credits">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="81.0" prefWidth="1024.0">
         <children>
            <Button fx:id="closeButton" mnemonicParsing="false" onAction="#closeButtonActionClick" prefHeight="35.0" prefWidth="70.0" text="Close">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
